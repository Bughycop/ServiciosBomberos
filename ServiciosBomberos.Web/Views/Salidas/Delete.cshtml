@model ServiciosBomberos.Web.Data.Entities.Salida
@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar salida</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="DiaSalida" class="control-label"></label>
                <input asp-for="DiaSalida" class="form-control" />
                <span asp-validation-for="DiaSalida" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Bombero1" class="control-label"></label>
                <input asp-for="Bombero1" class="form-control" />
                <span asp-validation-for="Bombero1" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="EsReten1" /> @Html.DisplayNameFor(m => m.EsReten1)
            </div>

            <div class="form-group">
                <label asp-for="Bombero2" class="control-label"></label>
                <input asp-for="Bombero2" class="form-control" />
                <span asp-validation-for="Bombero2" class="text-danger"></span>
            </div>

            <div>
                <input asp-for="EsReten2" /> @Html.DisplayNameFor(m => m.EsReten2)
            </div>

            <div class="form-group">
                <label asp-for="TipoSalida" class="control-label"></label>
                <input asp-for="TipoSalida" class="form-control" />
                <span asp-validation-for="DiaSalida" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <textarea asp-for="Descripcion" cols="4" rows="2" class="form-control"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-danger" >Eliminar <i class="fa fa-check"></i></button>
                <a asp-action="Index" class="btn btn-success">Volver a la Lista <i class="fa fa-hand-o-left"></i></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}